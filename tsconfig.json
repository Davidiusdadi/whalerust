{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "public/*"
  ],
  "compilerOptions": {
    "target": "ES2018",
    "outDir": "target",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "strict": true
  }
}